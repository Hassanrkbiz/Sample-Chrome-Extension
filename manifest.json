{
    "name": "Extension Name",
    "version": "1.0",
    "description": "Extension Description",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": ["activeTab","storage","<all_urls>"],
          "browser_action": {
        "default_popup": "popup.html"
      },
      "content_scripts": [{
        "matches": ["website url"],
        "js": ["js/content.js"]
    }
],
    "manifest_version": 2
  }